<Window x:Class="ToDoList.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit User" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Tên người dùng:"/>
            <TextBox x:Name="UserNameTextBox" Margin="0,5" />
            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox" Margin="0,5" />
            <TextBlock Text="Số điện thoại:"/>
            <TextBox x:Name="PhoneNumberTextBox" Margin="0,5" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="OK" Width="75" Click="OkButton_Click"/>
                <Button Content="Cancel" Width="75" Margin="5,0,0,0" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
